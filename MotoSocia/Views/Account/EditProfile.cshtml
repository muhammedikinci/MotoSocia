@model Application.Models.User.NewUserModel
@{
    ViewData["Title"] = "Profili Düzenle";
}

<form asp-controller="Account" asp-action="EditProfilePost" method="post" id="editprofileform" data-parsley-validate="">
    <div class="jumbotron">
        <h1>Bilgileri Güncelle</h1>
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label>Email</label>
            <input type="email" name="Email" id="email" value="@Model.Email" placeholder="test@ornek.com" class="form-control" data-parsley-type="email" data-parsley-length="[5, 70]" data-parsley-group="block1" data-parsley-trigger="change" required="" />
        </div>
        <div class="form-group">
            <label>Ad</label>
            <input type="text" name="Name" id="name" value="@Model.Name" placeholder="Ad" class="form-control" data-parsley-length="[2, 50]" data-parsley-group="block1" data-parsley-trigger="change" required="" />
        </div>
        <div class="form-group">
            <label>Soyad</label>
            <input type="text" name="Surname" id="surname" value="@Model.Surname" placeholder="Soyad" class="form-control" data-parsley-length="[2, 50]" data-parsley-group="block1" data-parsley-trigger="change" required="" />
        </div>
        <div class="form-group">
            <label>Eski Şifre</label>
            <input type="password" name="OldPassword" id="oldpassword" value="" placeholder="Şifre" class="form-control" data-parsley-length="[12, 50]" data-parsley-group="block1" data-parsley-trigger="change" required="" />
        </div>
        <div class="form-group">
            <label>Yeni Şifre</label>
            <input type="password" name="NewPassword" id="newpassword" value="" placeholder="Yeni Şifre" class="form-control" data-parsley-length="[12, 50]" data-parsley-group="block1" data-parsley-trigger="change" required="" />
        </div>
        <div class="form-group">
            <label>Yeni Şifre(Tekrar)</label>
            <input type="password" name="NewPasswordAgain" id="newpasswordagain" value="" placeholder="Yeni Şifre Tekrar" class="form-control" data-parsley-length="[12, 50]" data-parsley-group="block1" data-parsley-trigger="change" required="" />
        </div>
        <div class="invalid-form-error-message"></div>
        <recaptcha />
        <div class="form-group">
            <input type="button" value="Güncelle" class="form-control validate" id="editprofilebutton" />
        </div>
    </div>
</form>
