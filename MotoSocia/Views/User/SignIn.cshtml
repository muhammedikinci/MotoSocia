
@{
    ViewData["Title"] = "Kayıt Ol";
}

<form asp-controller="User" asp-action="Login" method="post" id="loginuserform" data-parsley-validate="">
    <div class="jumbotron">
        <h1>Giriş Yap</h1>
        <partial name="~/Views/Shared/_PrintAlertPartial.cshtml" />
        <div class="form-group">
            <label>Kullanıcı Adı</label>
            <input type="text" name="UserName" id="username" value="" placeholder="Kullanıcı Adı" class="form-control" data-parsley-length="[8, 40]" data-parsley-group="block1" data-parsley-trigger="change" required="" />
        </div>
        <div class="form-group">
            <label>Şifre</label>
            <input type="password" name="Password" id="password" value="" placeholder="Şifre" class="form-control" data-parsley-length="[12, 50]" data-parsley-group="block1" data-parsley-trigger="change" required="" />
        </div>
        <div class="invalid-form-error-message"></div>
        <recaptcha />
        <div class="form-group">
            <input type="button" value="Giriş Yap" class="form-control validate" id="loginuserbutton" />
        </div>
    </div>
</form>

@section Scripts {
    <recaptcha-script />
}